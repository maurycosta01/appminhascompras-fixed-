<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="appminhascompras_fixed_.Views.NovoProduto"
             Title="NovoProduto">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Salvar" Clicked="ToolbarItem_Clicked"/> <!-- AQUI FAZENDO A BARRA -->
    </ContentPage.ToolbarItems>
    <VerticalStackLayout Spacing="10" Padding="10">
        <Label Text="Descrição de Produtos:"/>
        <Entry x:Name="txt_descrição"/>

        <Label Text="Quantidade:"/>
        <Entry x:Name="txt_quantidade" Keyboard="Numeric"/>

        <Label Text="Preço Unitario:"/>
        <Entry x:Name="txt_preco" Keyboard="Numeric"/>
    </VerticalStackLayout>
</ContentPage>